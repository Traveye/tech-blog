<div class="row justify-space-around-md">
  <div class="login-card">
    <h2 class="page-title" style="font-size: 3rem">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login"></label>
        <input class="input is-normal" type="text" placeholder="UserName" id="username-login" style="width: 30em" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="input is-normal" type="password" placeholder="Password" id="password-login" style="width: 30em" />
      </div>
      <div class="form-group">
        <button class="button is-link" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title" style="font-size: 3rem">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup"></label>
        <input class="input is-normal" type="text" placeholder="UserName" id="name-signup" style="width: 30em">
      </div>
      <div class="form-group">
        <label for="password-signup"></label>
        <input class="input is-normal" type="text" placeholder="Password" id="password-signup" style="width: 30em">
      </div>
      <div class="form-group">
        <button class="button is-link" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>